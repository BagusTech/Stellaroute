if userIsAuthorized()
	div(duck-table='Attractions', duck-function='update', duck-key='Id', duck-key-value= attraction.Id, duck-edit-form='view')
		.content-card
			h2.content-card--header Travel Hacks
				button.btn.btn-edit.f-R.mt-NegSm(duck-button='edit', data-icon='fa fa-pencil')

			.duck-edit-hidden
				+accordion(attraction.needToKnow)(class='row', data-allow-multiple='true')
			.duck-view-hidden
				div(duck-field='needToKnow', duck-type='array')
					for advice in attraction && attraction.needToKnow ? attraction.needToKnow : [{}]
						.ptb-Sm.bg-G__ltr.clear(duck-type='object')
							.form-group.col-xs-10(duck-field='title', duck-type='string')
								label Title
									input.form-control(type='text', duck-value, value= advice.title)
							.form-group.col-xs-12(duck-field='description', duck-type='wysiwyg')
								label Description
								.summernote!= advice.description
							.col-xs-12.ta-C
								button.btn.btn-danger.mt-NegLg(duck-button='delete') Delete Fact
					.ta-R
						button.btn.btn-primary(duck-button='add') Add Fact

				button.btn.btn-primary(duck-button='submit') Save
				button.btn.btn-warning(duck-button='cancel') Cancel
else if attraction.needToKnow && attraction.needToKnow[0] && wysiwygHasData(attraction.needToKnow[0].description)
	+contentCard('Travel Hacks')
		+accordion(attraction.needToKnow)(class='row', data-allow-multiple='true')