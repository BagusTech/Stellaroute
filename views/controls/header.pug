.global-header(style={'background-color': headerBackground}, class= headerClasses)
	// REMOVED UNTIL SEARCH IS WORKING
		if showHeaderSearch
			button.btn-search.toggle-search(type='button', data-icon='fa fa-search', data-function='toggle', data-target='#SiteLogo, #SearchQuery')
			input#SearchQuery.form-control.bg-N.w-0.o-0(type='text', placeholder='Where do you want to go?', name='searchInput', data-toggle='w-0 o-0 o-1')

	a#SiteLogo(href='/', data-toggle='w-50 w-0 plr-Sm p-XXs')
		img.img-responsive(src=`/images/logo_${logoColor}.svg`, alt='Stellaroute')

	// REMOVED AND MADE LOGIN CONTROL MOBILE
		button.hamburger-menu--toggle(data-icon='fa fa-ellipsis-v', data-function='toggle', data-target='.hamburger-menu')
		nav.hamburger-menu(data-function='toggle')
			button.exit-icon(data-icon='fa fa-times', data-function='toggle', data-target='.hamburger-menu')
			ul.hamburger-menu--options(data-function='stopProp')
				if user
					li: a(href='/profile') My Account
				li: a(href='/request') Make A Request
				li: a(href='/feedback') Give Us Feedback
				if user
					li: a.btn.log-out(href='/logout') Log Out				

	.ml-A.mr-Md.mr-0--sm
		include login