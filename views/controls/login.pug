if (!user)
	.login-control
		button.btn.sign-up(type='button', data-toggle='modal', data-target='#SignupModal', tab-index='2') Sign Up
		button.btn.btn-default.bw-N(type='button', data-toggle='modal', data-target='#LoginModal', tab-index='1') Log In

	.modal.fade#LoginModal(tab-index='-1', role='dialog', aria-labelledby="LoginModalLabel")
		.modal-dialog(role='document')
			.modal-content
				.modal-header
					h4.mt-0.mb-0.pl-Sm.fc-G Log In
					button.close.p-A.t-Xs.r-Xs(type='button', data-dismiss='modal', aria-label='Close')
						span(aria-hidden='true') &times;
				form.modal-body(method='POST', action='/auth/local')
					//.col-xs-12
						button.btn.btn-lg.bg-Bl__fb.fc-W.mb-Sm(type='button') Log In with Facebook
						button.btn.btn-default.btn-lg(type='button') Log In with Google
					//.col-xs-12.ptb-Md.mb-Xs
						.text-wings.fc-G.fw-B
							hr
							span or
							hr

					.col-xs-12.mb-Sm
						label.input-label.w-100.p-R
							i.fa.fa-envelope.p-A.t-0.b-0.r-Md.d-F.fj-C.fd-C.fs-Lg(aria-hidden="true")
							input#Email.form-control.input-lg.mt-0(name='email', type='email', placeholder='Email Address')

					.col-xs-12.mb-Md
						label.input-label.w-100.p-R
							i.fa.fa-lock.p-A.t-0.b-0.r-Md.d-F.fj-C.fd-C.fs-Lg(aria-hidden="true")
							input#Passphrase.form-control.input-lg.mt-0(name='password', type='password', placeholder='Password')
						p.help-block.ta-R
							a.fs-12(href='/reset-password') Forgot Password

					//.col-xs-8
						.checkbox
							label.fc-G__dk
								input(type='checkbox', name='remember')
								| Remember me
					.col-xs-12
						input.btn.btn-lg.bg-Gr.fc-G__ltst(type='submit', value='Log In')

				.modal-footer
					.col-xs-12.col-sm-6.col-md-8
						p Don't have an account?
								button.btn-default.ml-Sm(type='button', data-dismiss='modal', data-toggle='modal', data-target='#SignupModal') Sign Up
						

	
	.modal.fade#SignupModal(tab-index='-1', role='dialog', aria-labelledby="SignupModal")
		.modal-dialog(role='document')
			form.modal-content(method='POST', action='/signup')
				.modal-header
					button.close(type='button', data-dismiss='modal', aria-label='Close')
						span(aria-hidden='true') &times;
					h4.modal-title#SignupModalLabel Create an Account
				.modal-body
					.col-xs-12
						.form-group
							label(for='First') First Name
								input.form-control#First(name='name.first', type='text', placeholder='John', required='required')

						.form-group
							label(for='Last') Last Name
								input.form-control#Last(name='name.last', type='text', placeholder='Doe', required='required')

						.form-group
							label(for='SignupEmail') Email
								input.form-control#SignupEmail(name='local.email', type='email', placeholder='joe@gmail.com', required='required')

						.form-group
							label(for='SignupPassphrase') Passphrase
								input.form-control#SignupPassphrase(name='local.password', type='password', placeholder='StellarouteIsTheBest!', required='required')

				.modal-footer.plr-Md
					.row
						.col-xs-12.col-sm-6
							p Already have an account?
								button.btn-default.ml-Sm(type='button', data-dismiss='modal', data-toggle='modal', data-target='#LoginModal') Log In
						.col-xs-12.col-sm-6.ta-R--sm
							button.btn.btn-default(type='button', data-dismiss='modal') Close
							input.btn.btn-primary(type='submit', value='Create')
else
	- var loginClasses = `bg-N bw-N pt-0 ${headerBackground === 'none' ? 'fc-W' : 'fc-B'}`;

	nav.dropdown
		button#UserMenu(type="button", data-toggle="dropdown", aria-haspopup="true", aria-expanded="false", class= loginClasses)
			if (user.name && user.name.first)
				span= user.name.first + ' '
			else
				span User
			
			if user.instagram
				img.br-C.ml-XXs(src=user.instagram.profile_picture, alt=user.name.first, style= {'max-width': '32px'})
			else
				i.fa.fa-user(aria-hidden="true")

		ul.dropdown-menu.l-A.r-0(aria-labelledby="UserMenu")
			li: a(href='/profile') My Account
			li: a(href='/request') Make A Request
			li: a(href='/feedback') Give Us Feedback
			if user.isAdmin
			li: a(href='/admin') Admin Panel
			li.divider(role="separator")
			li: a(href='/logout') Log Out