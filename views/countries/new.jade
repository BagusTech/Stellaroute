extends ../layout

block content
	h1 Add a new Country

	form(method='POST', action='/countries/new')
		fieldset.js-new-country
			legend Country

			.row
				.col-sm-6.col-xs-12
					.form-group
						label(for='CountryName') Name
						input.form-control#CountryName(name='name', type='text', placeholder='America', required)
