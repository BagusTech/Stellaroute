.guide-card--card(class=`guide-card--card__plain`)
	.guide-card--body
		h4.guide-card--title.js-card-title(class= card.title ? '' : 'guide-card--placeholder')= card.title ? card.title : 'Card Title'
		.guide-card--text.js-card-text(class= wysiwygHasData(card.text) ? '' : 'guide-card--placeholder')!= wysiwygHasData(card.text) ? card.text : 'This is where the <strong>Text</strong> for the card will go.'