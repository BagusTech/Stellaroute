.guide-card.guide-card__small
	.guide-card--content
		.guide-card--img-wrapper.js-card-image(style=`background-image: url(${getImagePath(card.image, 'thumb2')})`)
		.guide-card--info
			h2.guide-card--header.js-card-title= card.title || 'Card Title'
			.guide-card--description.js-card-text!= card.text || 'This is where the <strong>Text</strong> for the card will go.'