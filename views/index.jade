extends layout

block header
	if (!user)
		header.landing-header
			.landing-utility
				img(src='/images/logo.png', alt='Stellaroute')
				include controls/login
			h1.mt-Xl.mb-Lg.ta-C
				| Plan Spontaneity
				small.d-B.mt-Sm.fc-W
					| Join the Beta in 
					span.d-B.d-I--sm January, 2017

			include controls/beta-signup
	else
		include controls/header

block content
	if (!user)
		.visible-xs
			section.page-card.introduction
				h2 What is Stellaroute?
				p.lead Stellaroute is a new way to go plan trips so you can get the most out of your travels.

			section.page-card.location-overviews
				h2 Location Overviews
				p Know the critical information about where you're going without hours of reseach

			section.page-card.attraction-listings
				h2 Attraction Listings
				p Find the must see attractions and the hidden gems all in one place

			section.page-card.neighborhood-descriptions
				h2 Neighborhood Descriptions
				p Understand a destination before you get there and find your crowd

			section.page-card.custom-guides
				h2 Custom Guides
				p Plan painlessly by using one of our expert guides or quickly make your own

			section.page-card.advice-ratings
				h2 Advice &amp; Ratings
				p Get quality advice and descriptive ratings from peers and experts

		.hidden-xs
			.row.mb-Sm
				.col-sm-4.ta-C
					h2 Custom Guides
					p.lead.custom-guides-text Plan painlessly by using one of our expert guides or quickly make your own.

					.screen-shot-black-phone
						img(src="/images/screenshot-guide.jpg")

				.col-sm-4
					.screen-shot-white-phone
						.screenshot-rotator
							img.active(src="/images/screenshot-overview.jpg", alt="placeholder")
							img.after(src="/images/screenshot-attractions.jpg", alt="placeholder")
							img.before(src="/images/screenshot-neighborhoods.jpg", alt="placeholder")
				
				.col-sm-4.text-center
					h2 Meaningful Ratings
					p.lead Make the most of your vacation by making informed decisions based on your interests.

					.screen-shot-black-phone
						img(src="/images/screenshot-ratings.jpg")

		script(type='text/javascript', src='js/pages/landingPage.min.js')
	else
		h1.ta-C Plan Spontaneity

		.container
			.row
				.col-xs-12.col-md-6.col-md-push-3
					.form-group.p-R
						input.form-control.fa.fa-search(type='search', placeholder="Where do you want to go?", name="locationSearch")
						button.p-A.r-Xs.t-XXs.bg-N.bw-0.pt-XXs.fc-G__lt(type="button")
							i.fa.fa-search(aria-hidden="true")


block footer
	if (!user)
		footer.bg-Purp.p-Xs.fc-W.ta-C
			small 
				| Copyright &copy; 2016 Bagus Tech LLC. 
				span All rights reserved
	else
		include controls/footer


