extends layout.pug

append options
	- headerBackground = 'none';
	- logoColor = 'white';
	- headerClasses = 'p-A pt-Sm';
	- showHeaderSearch = false;

block content
	if user	
		.media-bg-img.home-bg-img.pt-Xl
			.container.ptb-Xl.plr-Lg
				.row
					.col-xs-12
						h1.mt-0.mb-Md.ta-C
							span.fs-Xl--sm stellaroute
							br
							small.tt-U.fs-32--sm Plan Spontaneity

						p.lead.ta-J.mlr-A.w-60--sm.fc-W Welcome to our Beta. We’re excited to help travelers experience their world, their way. We’d love to hear about where you want to go next and how you like to travel.
		.bg-W
			.container

				h2.fc-G Locations
				.row
					for location in approvedLocations
						.col-xs-12.col-sm-6.col-md-3.mb-Md
							a(href=`/${location.countryUrl}/${location.url}`)
								+card(location.cardImage, location.names.display, null, null, null, 'medium')

						.col-xs-12.col-sm-6.col-md-3.mb-Md
							.card.c-P(data-toggle='modal', data-target='#RequestLocation')
								.ta-C.fc-Purp.bg-G__ltr(style='padding: 22% 0; font-size: 60px;')
									i.fa.fa-plus(aria-hidden='true')
									.sr-only Request

								h3.card--title Request a Location

						.col-xs-12.col-md-6
							.card.p-Md.p-Lg--sm.pb-0.pb-Md--sm
								h2.mt-0.mb-Md--lg Sign Up for Our Newsletter
								hr
								small.d-N.d-B--sm.fc-G.pt-Xs Stay updated on new features and locations!

								include controls/beta-signup.pug
						

				include controls/requestLocation.pug

				script(type='text/javascript', src='/js/controls/betaSignup.min.js')

				hr.mb-Lg

				h2.fc-G Coming Soon
				.masonry.masonry-grid-1.masonry-grid-2--sm.masonry-grid-4--md
					.masonry--item
						+card('budweiser.jpg', 'St. Louis', null, null, null, 'medium')
					.masonry--item
						+card('635973353399336445-1421152854_NYC-1.jpg', 'New York', null, null, null, 'medium')
					// REMOVED AS SUPERFLOUS, MIGHT PUT BACK IN LATER
						.masonry--item
							+card('London-1_tcm233-2111842.jpg', 'London', null, null, null, 'medium')
					.masonry--item
						+card('Amsterdam.jpg', 'Amsterdam', null, null, null, 'medium')
					.masonry--item
						+card('efm-hotel-billboard-washingtondccom.jpg', 'Washington, D.C.', null, null, null, 'medium')

				hr.mb-Lg

				h2.fc-G Upcoming Features
				ul.fs-Xl.mt-Sm.mb-XXl
					li Export to PDF
					li Create &amp; Edit Personalized Guides
					li Forums
					li Rate Attractions
					li Interactive Map
					li Upload Pictures
					
				// REMOVED UNTIL SEARCH IS WORKING
					.row
						h1.mt-0.mb-Md.ta-C Plan Spontaneity
						.col-xs-12.col-md-6.col-md-push-3
							.input-group
								input.form-control.p-S(type='text', placeholder='Where do you want to go?')
								.input-group-btn
									button.btn.btn-primary.p-S(type='submit')
										span.hidden-Xs Search
										span.visible-Xs
											i.fa.fa-search(aria-hidden="true")
							.text-wings.fc-W.mtb-Lg
								hr
								span or
								hr

							a.btn.btn-primary.btn-lg.fs-Lg(href="/explore", data-icon='fa fa-location-arrow') &nbsp;Explore
	else
		#FeedbackMessage.p-A.t-Md.r-Md.d-N
			p.alert.alert-success.d-N Email sent, feel free to send us another!
			p.alert.alert-danger.d-N Sorry, something went wrong. If this continues please let us know and we will fix is shortly.
		.media-bg-img.home-bg-img.pt-Xl(style='min-height: 100vh;')
			.container.ptb-Xl.plr-Lg
				.row
					.col-xs-12
						h1.mt-0.mb-Md.ta-C
							span.fs-Xl--sm stellaroute
							br
							small.tt-U.fs-32--sm Plan Spontaneity

						p.lead.ta-C.mlr-A.fc-W.mb-Md Welcome! We are curretly accepting users for our Beta.

				.row
					.col-xs-12.col-md-8.col-md-push-2.col-lg-6.col-lg-push-3
						include ./controls/beta-signup.pug

				.row.mt-XXl--md
					.col-xs-12.col-md-8.col-md-push-2.col-lg-6.col-lg-push-3
						.content-card
							h2.content-card--header Contact Us
							p.lead We will be sure to get back to you as soon as possible.
							form#FeedbackForm
								.form-group
									input.form-control(name='user', type='text', placeholder='Name')
								.form-group
									input.form-control(name='email', type='email', placeholder='Email')
								.form-group
									input.form-control(name='subject', type='text', placeholder='Subject')
								.form-group
									textarea.form-control(name='feedback', placeholder='What\'s on your mind?', style='min-height: 150px;')
								.form-group.mb-0
									button.btn-primary.btn-block(type='submit') Send

					script(src='/js/pages/feedback.min.js')
block footer
