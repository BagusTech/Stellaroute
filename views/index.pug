						.card.c-P(data-toggle='modal', data-target='#RequestLocation')
							.ta-C.fc-Purp.bg-G__ltr(style='padding: 28% 0 ; font-size: 60px;')
								i.fa.fa-plus(aria-hidden='true')
								.sr-only Request

							h3.card--title Request a Location

					.col-xs-12.col-md-6
						.card.p-Md.p-Lg--sm.pb-0.pb-Md--sm
							h2.mt-0.mb-Md--lg Sign Up for Our Newsletter
							hr
							small.d-N.d-B--sm.fc-G.pt-Xs Stay updated on new features and locations!

							include controls/beta-signup.pug
					

			include controls/requestLocation.pug

			script(type='text/javascript', src='/js/controls/betaSignup.min.js')

			hr.mb-Lg

			h2.fc-G Coming Soon
