extends layout.pug

block header
	if (!user)
		header.landing-header
			.landing-utility
				img(src='/images/logo.png', alt='Stellaroute')
				include controls/login.pug
			h1.mt-Xl.mb-Lg.ta-C
				| Plan Spontaneity
				small.d-B.mt-Sm.fc-W
					| Join the Beta in 
					span.d-B.d-I--sm January, 2017

			.row.p-A.l-0.r-0.plr-Md
				.col-xs-12.col-sm-8.col-sm-push-2.col-md-6.col-md-push-3
					include controls/beta-signup.pug
	else
		header.site-header.z-1.plr-Md
			.row.pt-Md
				.col-xs-6.col-sm-3
					a.d-B.w-50--sm(href='/')
						img.img-responsive(src='/images/logo_white.svg', alt='Stellaroute')
				.col-sm-6.hidden-xs
					ul.list-inline.ta-C
						li.plr-Sm
							a.fc-W(href='/guides') Guides
						li.plr-Sm
							a.fc-W(href='/continents') Continents
						li.plr-Sm
							a.fc-W(href='/world-regions') World Regions
						li.plr-Sm
							a.fc-W(href='/countries') Countries
				.col-xs-6.col-sm-3.ta-R.hidden-xs
					include controls/login.pug

				button.hamburger-menu--toggle.pt-0.mt-0
					i.fa.fa-ellipsis-v(aria-hidden='true')
				nav.hamburger-menu.z-1
					button.exit-icon
						i.fa.fa-times(aria-hidden='true')
					ul.hamburger-menu--options
						li
							a(href='/profile') My Accounts
						li
							a(href='/request') Make A Request
						li
							a(href='/feedback') Give Us Feedback
						li
							button.btn.log-out(type='button') Log Out

block content
	if (!user)
		.bg-W
			.container.p-Md 
				.visible-xs
					section.page-card.introduction
						h2 What is Stellaroute?
						p.lead Stellaroute is a new way to go plan trips so you can get the most out of your travels.

					section.page-card.location-overviews
						h2 Location Overviews
						p Know the critical information about where you're going without hours of research

					section.page-card.attraction-listings
						h2 Attraction Listings
						p Find the must see attractions and the hidden gems all in one place

					section.page-card.neighborhood-descriptions
						h2 Neighborhood Descriptions
						p Understand a destination before you get there and find your crowd

					section.page-card.custom-guides
						h2 Custom Guides
						p Plan painlessly by using one of our expert guides or quickly make your own

					section.page-card.advice-ratings
						h2 Advice &amp; Ratings
						p Get quality advice and descriptive ratings from peers and experts

				.hidden-xs
					.row
						.col-sm-4.ta-C.mb-Sm
							h2 Custom Guides
							p.lead.fs-Lg Plan painlessly by using one of our expert guides or quickly make your own.

							.screen-shot-black-phone
								img(src="/images/screenshot-guide.jpg")

						.col-sm-4
							.screen-shot-white-phone
								.screenshot-rotator(data-function='banner')
									img(src="/images/screenshot-overview.jpg", alt="placeholder", data-banner-item)
									img(src="/images/screenshot-attractions.jpg", alt="placeholder", data-banner-item)
									img(src="/images/screenshot-neighborhoods.jpg", alt="placeholder", data-banner-item)
						
						.col-sm-4.text-center
							h2 Meaningful Ratings
							p.lead.fs-Lg Make the most of your vacation by making informed decisions based on your interests.

							.screen-shot-black-phone
								img(src="/images/screenshot-ratings.jpg")
	else
		.media-bg-img.home-bg-img
			

			.container.d-F.fd-C.fj-C.p-A.t-0.b-0.l-0.r-0
				.row.plr-Sm
					h1.mt-0.mb-Md.ta-C Plan Spontaneity
					.col-xs-12.col-md-6.col-md-push-3
						.input-group
							input.form-control(type='text', placeholder='Where do you want to go?')
							.input-group-btn
								button.btn.btn-primary(type='submit')
									span.hidden-Xs Search
									span.visible-Xs
										i.fa.fa-search(aria-hidden="true")
						.text-wings.fc-W.mtb-Lg
							hr
							span or
							hr

						.row
							.col-xs-6.ta-C.fs-Lg
								a.fc-W(href="/continents")
									i.fa.fa-location-arrow(aria-hidden="true")
									| &nbsp; Explore
							.col-xs-6.ta-C.fs-Lg
								button.fc-W.bg-N.bw-N(type='button', data-toggle='modal', data-target='#CreateContent', tab-index='1')
									i.fa.fa-plus(aria-hidden="true")
									| &nbsp; Request

		.modal.fade#CreateContent(tab-index='-1', role='dialog')
			.modal-dialog(role='document')
				.modal-content
					.modal-header.mb-Md
						h4.mt-0.mb-0.pl-Sm.fc-G CREATE CONTENT
						button.close.p-A.t-Xs.r-Xs(type='button', data-dismiss='modal', aria-label='Close')
							span(aria-hidden='true') &times;
					.modal-body
						.col-xs-12.col-sm-8.mb-Md
							label.d-B What type of location do you want to create? 
							select.form-control
								option Location
								//option Attraction
								//option Guide
						.col-xs-12.col-sm-8.mb-Md.mb-Md
							label.d-B What level is this location? 
							select.form-control
								option Country
								option Country Region
								option State/Prov
								option State/Prov Region
								Option City
								option City Region
								option Neighborhood
						.col-xs-12.col-sm-8.mb-Md.mb-Lg
							label.d-B What's the name of the location? 
							input.form-control.short-statement(type="text", name="location", placeholder="Southeast Asia")
						.col-xs-12.col-sm-8.col-sm-push-2
							input.btn.btn-primary.btn-Sm.w-100.bg-Gr.fc-G__ltst(type='submit', value='Create')

