extends layout.pug

append options
	- headerBackground = 'none';
	- logoColor = 'white';
	- headerClasses = 'p-A pt-Sm';
	- showHeaderSearch = false;

block content
	.media-bg-img.home-bg-img.pt-Xl
		.container.ptb-Xl.plr-Lg
			.row
				.col-xs-12
					h1.mt-0.mb-Md.ta-C
						span.fs-Xl--sm stellaroute
						br
						small.tt-U.fs-32--sm Plan Spontaneity

					p.lead.ta-J.mlr-A.w-60--sm.fc-W Welcome to our Beta. We’re excited to help travelers experience their world, their way. We’d love to hear about where you want to go next and how you like to travel.
	.bg-W
		.container

			h2.fc-G Locations
			.masonry.masonry-grid-1.masonry-grid-2--sm.masonry-grid-4--md
				for location in approvedLocations
					a.masonry--item(href=`/${location.countryUrl}/${location.url}`)
						+card(location.cardImage, location.names.display)

				.masonry--item(data-toggle='modal', data-target='#RequestLocation')
					.card
						.ta-C.fc-Purp.bg-G__ltr(style='padding: 30% 0 ; font-size: 60px;')
							i.fa.fa-plus(aria-hidden='true')
							.sr-only Request

						h3.card--title Request a Location

			include controls/requestLocation.pug

			script(type='text/javascript', src='/js/controls/betaSignup.min.js')

			hr.mb-Lg

			h2.fc-G Coming Soon
			.masonry.masonry-grid-1.masonry-grid-2--sm.masonry-grid-4--md
				.masonry--item
					+card('http://i1.trekearth.com/photos/1577/st._louis_riverfront-1.jpg', 'St. Louis')
				.masonry--item
					+card('http://az616578.vo.msecnd.net/files/2016/04/27/635973353399336445-1421152854_NYC-1.jpg', 'New York')
				// REMOVED AS SUPERFLOUS, MIGHT PUT BACK ON LATER
					.masonry--item
						+card('http://cdn.ek.aero/english/images/London-1_tcm233-2111842.jpg', 'London')
				.masonry--item
					+card('http://www.accessmba.com/uploads/tx_templavoila/Amsterdam.jpg', 'Amsterdam')
				.masonry--item
					+card('http://cdn.boulevards.com/imgs/efm-hotel-billboard-washingtondc.com.jpg', 'Washington, D.C.')

			hr.mb-Lg

			h2.fc-G Upcoming Features
			ul.fs-Xl.mt-Sm.mb-XXl
				li Export to PDF
				li Create &amp; Edit Personalized Guides
				li Forums
				li Rate Attractions
				li Interactive Map
				li Upload Pictures
				
			// REMOVED UNTIL SEARCH IS WORKING
				.row
					h1.mt-0.mb-Md.ta-C Plan Spontaneity
					.col-xs-12.col-md-6.col-md-push-3
						.input-group
							input.form-control.p-S(type='text', placeholder='Where do you want to go?')
							.input-group-btn
								button.btn.btn-primary.p-S(type='submit')
									span.hidden-Xs Search
									span.visible-Xs
										i.fa.fa-search(aria-hidden="true")
						.text-wings.fc-W.mtb-Lg
							hr
							span or
							hr

						a.btn.btn-primary.btn-lg.fs-Lg(href="/explore", data-icon='fa fa-location-arrow') &nbsp;Explore

