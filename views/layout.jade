	body
		if (user)
			header.landing-header
				.landing-utility
					img(src='/images/logo.png', alt='Stellaroute')
					include controls/login
				h1 
					| Plan Spontaneity
					small 
						| Join the Beta in 
						span January, 2017
				.email-capture-wrapper.form-group
					form.input-group.email-capture.active
						input.form-control(type='email', placeholder='name@email.com', id='EmailCaptureInput', name='email')
						.input-group-addon
							input(type='submit', id='EmailCaptureButton', for='email', value='Sign Me Up')

					form.email-capture-success
						.email-capture-success-content
							h2.submit-guide-header Thanks for signing up!
							p.submit-guide-text In the mean time request a custom guide from us.
							.input-group
								input.form-control(type='text', placeholder='Where do you want to go?', id='RequestGuideInput', name='travel')
								.input-group-addon
									input(type='submit', id='RequestGuideButton', value='Request a Guide')

					span.email-capture-error Please enter a valid email.



			main
				.container.landing-container
					block content
					include flash

			footer.landing-footer
				small 
					| Copyright &copy; 2016 Bagus Tech LLC. 
					span All rights reserved
		else
			header.site-header
				a(href='/')
					img.logo-header(src='/images/logo_purple.svg', alt='Stellaroute')
				#SiteSearch.search
					button.search--toggle(type='button')
						i.fa.fa-search(aria-hidden="true")
					
					.search--area
						button.search--btn(type='button')
							i.fa.fa-search(aria-hidden="true")
						input.search--input(type='text', placeholder='Where do you want to go?', id='SearchQuery', name='searchInput')
				button.hamburger-menu--toggle
					i.fa.fa-ellipsis-v(aria-hidden='true')
				nav.hamburger-menu
					button.exit-icon
						i.fa.fa-times(aria-hidden='true')
					ul.hamburger-menu--options
						li
							a(href='http://stellaroute.com/profile') My Accounts
						li
							a(href='http://stellaroute.com/request') Make A Request
						li
							a(href='http://stellaroute.com/feedback') Give Us Feedback
						li
							button.btn.log-out(type='button') Log Out
								
				.account-access
					include controls/login
				
			main.site-body
				include flash
				block content

			footer.site-footer
				.footer-content.container
					.row
						.col-xs-12.col-sm-6.footer-col-1
							a(href='#')
								img.logo-footer(src='/images/logo_purple.svg', alt='Stellaroute')
							ul.about-us.visible-xs
								li
									a(href='/about') About Us
								li
									| &bull;
								li
									a(href='mailto:info@stellaroute.com') Email Us
							ul.social-media
								li.facebook-icon
									a(href='https://www.facebook.com/stellaroute/' target='blank')
										i.fa.fa-facebook(aria-hidden="true")
										span.sr-only Facebook
								li.instagram-icon
									a(href='https://www.instagram.com/stellaroute_travel/' target='blank')
										i.fa.fa-instagram(aria-hidden="true")
										span.sr-only Instagram
								li.twitter-icon
									a(href='https://twitter.com/stellaroute' target='blank')
										i.fa.fa-twitter(aria-hidden="true")
										span.sr-only Twitter
								li.pinterest-icon
									a(href='https://www.pinterest.com/stellaroute/' target='blank')
										i.fa.fa-pinterest(aria-hidden="true")
										span.sr-only Pinterest
								li.youtube-icon
									a(href='https://www.youtube.com/channel/UCU5tyYgAJoqOudRkss21BSw' target='blank')
										i.fa.fa-youtube(aria-hidden="true")
										span.sr-only YouTube
						.col-xs-12.col-sm-6.footer-col-2
							.email-capture-wrapper.form-group
								h3 Sign Up for Our Beta	
									small.hidden-xs We'll keep you updated leading up to our launch
								include controls/beta-signup

				ul.bottom-footer
					li.hidden-xs
						a(href="/about") About Us
					li
						a(href="http://bagusco.com/") &copy; Bagus Tech LLC. 
					li
						a(href="/privacy-and-terms") All rights reserved
					li.hidden-xs
						a(href="mailto:info@stellaroute.com") Email Us