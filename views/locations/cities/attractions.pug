block content
	if (user && user.isAdmin)
		.ta-r
			button.btn.btn-primary(data-target='#AddAttraction', data-toggle='modal') Add Attraction

		#AddAttraction.modal.fade(tabindex="-1", role="dialog")
			.modal-dialog.modal-lg
				.content-card
					h2.content-card--header Add New Attraction
					.row
						.col-xs-12#AddAttractionForm
							.form-group
								label(for='AttractionName') Name
								input#AttractionName.form-control.js-food-field(type='text', required, name='name')
							.form-group
								label(for='AttractionImage') Image
								input#AttractionImage.form-control.js-food-field(type='text', required, name='image')
							.form-group
								label(for='AttractionCategory') Category
								select#AttractionCategory.form-control.js-food-field(name='category')
									option Only In
									option Local Cuisine
									option Restaurant
									option Drinks
									option Best Dishes
							.form-group
								label(for='AttractionTagline') Tagline
								input#AttractionTagline.form-control.js-food-field(type='text', maxlength='130', name='tagline')
							.form-group
								label(for='AttractionDescription') Description
								#AttractionDescription.js-food-field(name='description', data-summernote)
									.summernote

							.form-group
								h3 Contains
								.checkbox
									label
										input.js-food-field(name='contains', type='checkbox', value='Shellfish')
										| Shellfish
								.checkbox
									label
										input.js-food-field(name='contains', type='checkbox', value='Gluten')
										| Gluten
								.checkbox
									label
										input.js-food-field(name='contains', type='checkbox', value='Nuts')
										| Nuts
								.checkbox
									label
										input.js-food-field(name='contains', type='checkbox', value='Meat')
										| Meat
								.checkbox
									label
										input.js-food-field(name='contains', type='checkbox', value='Dairy')
										| Dairy
							.form-group
								label(for='AttractionDishes') Dishes
								input#AttractionDishes.form-control.js-food-field(type='text', name='dishes')
							.form-group
								label(for='AttractionArea') Area
								input#AttractionArea.form-control.js-food-field(type='text', name='area')
							.form-group
								label(for='AttractionAddress') Address
								input#AttractionAddress.form-control.js-food-field(type='text', name='address')
							.form-group
								label(for='AttractionWhatToOrder') What to Order
								input#AttractionWhatToOrder.form-control.js-food-field(type='text', name='whatToOrder')
							.form-group
								label(for='AttractionSuggestedRestaurant') Suggested Restaurant
								input#AttractionSuggestedRestaurant.form-control.js-food-field(type='text', name='suggestedRestaurant')
							.form-group
								label(for='AttractionReadMore') Read More
								input#AttractionReadMore.form-control.js-food-field(type='text', name='readMore')

							.ta-R
								button#AddAttractionSubmit.btn.btn-primary(type='button') Submit
								button.btn.btn-default.ml-Sm(type='button', data-toggle='modal', data-target='#AddAttraction') Cancel

	if (city.attractions)
		+masonry(city.food.foods.filter((i) => i.category !== 'Restaurant').sort(function(a, b){ if(a.order > b.order){return 1} if(a.order < b.order){return -1} return 0; }), 'masonry-grid-1 masonry-grid-3--md masonry-grid-4--lg pt-Sm', true)
				
		h2 Restaurants
		+masonry(city.food.foods.filter((i) => i.category === 'Restaurant'), 'masonry-grid-1.masonry-grid-3--md.masonry-grid-4--lg')
	else
		.content-card
			p.lead Sorry, but it appears that no attractions have been added for this city yet, please check back soon.
			p If you would like to help us fill out content for this area, please send us an email to <a href='mailto:info@stellaroute.com'>info@stellaroute.com</a> and we will get back to you shortly.