extends ../../layout

block content
	.media-bg-img.request-page-header
		h1 World Regions

	.container
		.col-xs-12.col-sm-6-col-sm-pus-3
			.content-card.mt-Md
				.row
					.col-sm-3.col-xs-6
						strong Name
					.col-sm-9.col-xs-6
						strong Continent(s)

				for region in worldRegions
					.row
						.col-sm-3.col-xs-6
							a(href=`/${region.url}`)= region.names.display
						.col-sm-9.col-xs-6= region.continentDisplay && region.continentDisplay.join(', ')


				p.text-right
					a.btn.btn-primary(href='/world-regions/new') New

