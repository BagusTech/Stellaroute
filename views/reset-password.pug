extends layout.pug

append header
	#RequestFlash(style='display: none;')
		.p-A.t-Md.r-Md
			p.alert.alert-success Email Successfully Sent.

block content
	.media-bg-img.request-page-header
		.container
			h1 Reset Password
	.container
		.col-xs-12.col-sm-8.col-sm-push-2.col-md-6.col-md-push-3
			+contentCard('Reset Password')
				p.lead Please Enter your account email below and click on the button. We will send you an email with a new temporary password to login, then you can go to your profile and set it to whatever you would like.

				#ResetPasswordForm.form-group
					.input-group
						input#ResetPasswordEmail.form-control(type='email', placeholder='Email')
						.input-group-btn
							button#ResetPasswordSubmit.btn-primary Reset Password

	script(src='js/pages/resetPassword.min.js')